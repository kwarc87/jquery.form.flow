{
    "init": [
        {
            "type": "initSlider"
        },
        {
            "type": "initAddressIntegration"
        },
        {
            "type": "setProvidersOnStateSelectChange"
        }
    ],
    "beforeSubmit": {
        "type": "showLoaderWithSubmitDelay",
        "arguments": [3000]
    },
    "steps":  [
        {
            "id"                 : 1,
            "type"               : "required",
            "fieldsToValidate"   : "[name='homeowner']",
            "validationRules"    : {
                "homeowner": {
                    "required":                       true
                }
            }
        },
        {
            "id"                 : 2,
            "type"               : "required",
            "fieldsToValidate"   : "#zip_code",
            "validationRules"    : {
                "zip_code": {
                    "required":                       true,
                    "zipcodeUSPending":               true,
                    "zipcodeUSStatus":                true,
                    "zipcodeUSGoogleMaps":            true
                }
            },
            "callbackOnHide" : [
                {
                    "type"                       : "infoModal",
                    "direction"                  : "next",
                    "arguments"                  : ["Congratulation! You successfull fill the zip code!", 2000]
                },
                {
                    "type"                       : "infoModal",
                    "direction"                  : "prev",
                    "arguments"                  : ["You returned to the first step!", 2000]
                }
            ]
        },
        {
            "id"                 : 3,
            "type"               : "required",
            "fieldsToValidate"   : "#state",
            "validationRules"    : {
                "state": {
                    "required":                       true
                }
            }
        },
        {
            "id"                 : 4,
            "type"               : "optional",
            "condition"          : {
                "type": "equals",
                "arguments": ["#state", "NY"]
            }
        },
        {
            "id"                 : 5,
            "type"               : "required",
            "fieldsToValidate"   : "#monthly_bill",
            "validationRules"    : {
                "monthly_bill": {
                    "required":                       true
                }
            },
            "callbackOnShow" : [
                {
                    "type"                       : "infoModal",
                    "direction"                  : "next",
                    "arguments"                  : ["You are going next and now you are on power monthly bill step.", 2000]
                },
                {
                    "type"                       : "infoModal",
                    "direction"                  : "prev",
                    "arguments"                  : ["You are going back and now you are on power monthly bill step.", 2000]
                }
            ]
        },
        {
            "id"                 : 6,
            "type"               : "required",
            "fieldsToValidate"   : "#current_provider",
            "validationRules"    : {
                "current_provider": {
                    "required":                       true
                }
            }
        },
        {
            "id"                 : 7,
            "type"               : "optional",
            "fieldsToValidate"   : "#people_in_home",
            "condition"          : {
                "type": "isChecked",
                "arguments": ["#homeowner_1"]
            },
            "validationRules"    : {
                "people_in_home": {
                    "homeownerrequired":              true
                }
            }
        },
        {
            "id"                 : 8,
            "type"               : "required",
            "fieldsToValidate"   : "#address, #city",
            "validationRules"    : {
                "address": {
                    "required":                       true,
                    "minlength":                      2
                },
                "city": {
                    "required":                       true,
                    "minlength":                      2
                }
            },
            "callbackOnShown" : {
                "type"                       : "infoModal",
                "arguments"                  : ["You are on address step.", 2000]
            }
        },
        {
            "id"                 : 9,
            "type"               : "submit",
            "fieldsToValidate"   : "#first_name, #last_name, #email_address, #phone_home",
            "validationRules"    : {
                "first_name": {
                    "required":                       true,
                    "minlength":                      2
                },
                "last_name": {
                    "required":                       true,
                    "minlength":                      2
                },
                "email_address": {
                    "required":                       true,
                    "email":                          true
                },
                "phone_home": {
                    "required":                       true
                }
            }
        }
    ]
}