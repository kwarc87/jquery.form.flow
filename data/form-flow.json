{
    "steps":  [
        {
            "type"               : "required",
            "fieldsToValidate"   : "[name='homeowner']",
            "validationRules"    : {
                "homeowner": {
                    "required":                       true
                }
            }
        },
        {
            "type"               : "required",
            "fieldsToValidate"   : "#zip_code",
            "validationRules"    : {
                "zip_code": {
                    "required":                       true,
                    "zipcodeUSPending":               true,
                    "zipcodeUSStatus":                true,
                    "zipcodeUSGoogleMaps":            true
                }
            },
            "callbackOnHide"     : {
                "type"           : "infoModal",
                "arguments"      : ["Congratulation! You successfull fill the zip code!", 2000]
            }
        },
        {
            "type"               : "required",
            "fieldsToValidate"   : "#state",
            "validationRules"    : {
                "state": {
                    "required":                       true
                }
            }
        },
        {
            "type"               : "optional",
            "condition"          : {
                "type": "equals",
                "arguments": ["#state", "NY"]
            }
        },
        {
            "type"               : "required",
            "fieldsToValidate"   : "#monthly_bill",
            "validationRules"    : {
                "monthly_bill": {
                    "required":                       true
                }
            }
        },
        {
            "type"               : "required",
            "fieldsToValidate"   : "#current_provider",
            "validationRules"    : {
                "current_provider": {
                    "required":                       true
                }
            }
        },
        {
            "type"               : "optional",
            "fieldsToValidate"   : "#people_in_home",
            "condition"          : {
                "type": "isChecked",
                "arguments": ["#homeowner_1"]
            },
            "validationRules"    : {
                "people_in_home": {
                    "homeownerrequired":              true
                }
            }
        },
        {
            "type"               : "required",
            "fieldsToValidate"   : "#address, #city",
            "validationRules"    : {
                "address": {
                    "required":                       true,
                    "minlength":                      2
                },
                "city": {
                    "required":                       true,
                    "minlength":                      2
                }
            }
        },
        {
            "type"               : "submit",
            "fieldsToValidate"   : "#first_name, #last_name, #email_address, #phone_home",
            "validationRules"    : {
                "first_name": {
                    "required":                       true,
                    "minlength":                      2
                },
                "last_name": {
                    "required":                       true,
                    "minlength":                      2
                },
                "email_address": {
                    "required":                       true,
                    "email":                          true
                },
                "phone_home": {
                    "required":                       true
                }
            }
        }
    ],
    "beforeSubmit": {
        "type": "showLoader",
        "arguments": [3000]
    }
}